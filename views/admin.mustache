<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/css/materialize.min.css" type="text/css" />
<link rel="stylesheet" href="/css/style.css" type="text/css" />

<body class="container">
	<!-- Preloader -->
	<div id="preloader">
		<div id="status"></div>
	</div>

	<div class="row">
		<div class="valign-wrapper">
			<div class="col s10">
				<h1>
					<i class="medium material-icons">settings</i> Admin Page</h1>
			</div>
			<div class="col s2">
				<a class="btn waves-effect waves-light grey" href="../admin/logout">Logout
				</a>
			</div>
		</div>
		<br/>
		<div class="input-field col s6">
			<select id="page-option">
				<option value="" disabled selected>Select your option</option>
				<option value="1">1. No Slider, Short Text</option>
				<option value="2">2. No Slider, Long Text</option>
				<option value="3">3. Slider, Short Text</option>
				<option value="4">4. Slider, Long Text</option>
			</select>
			<label>Survey Page Options</label>
		</div>
		<div class="input-field col s6">
			<button class="btn waves-effect waves-light blue" onclick="createSelection()">Create
				<i class="material-icons left">add</i>
			</button>
		</div>
	</div>

	<br/>

	<div class="row">
		<h5>Pages</h5>
		<table class="highlight responsive-table">
			<thead>
				<tr>
					<th>Slider</th>
					<th>Text</th>
					<th>Date Created</th>
					<th>Link ID</th>
					<th>Page View</th>
					<th>Content</th>
					<th>Delete</th>
				</tr>
			</thead>

			<tbody id="table-page-list">
			</tbody>
		</table>
	</div>

	<br/>

	<div class="row">
		<h5>Results</h5>
		<a class="waves-effect waves-light btn" onclick="download_csv()">
			<i class="material-icons left">file_download</i>File</a>
		<table class="highlight responsive-table">
			<thead>
				<tr>
					<th>Slider</th>
					<th>Text</th>
					<th>Link ID</th>
					<th>Participant ID</th>
					<th>Logi</th>
					<th>Slider</th>
					<th>Symptoms</th>
					<th>Slider</th>
					<th>Outbreaks</th>
					<th>Slider</th>
					<th>Start Time</th>
					<th>End Time</th>
					<th>Delete</th>
				</tr>
			</thead>

			<tbody id="table-result-list">
			</tbody>
		</table>
	</div>

	<!-- Modal Structure -->
	<div id="modal1" class="modal modal-fixed-footer">
		<div class="modal-content">
			<h5>Edit Content</h5>
			<form id="page-content-form"></form>
		</div>
		<div class="modal-footer">
			<a class="modal-action modal-close waves-effect waves-green btn amber">Cancel</a>
			<a onclick="updatePage()" class="modal-action waves-effect waves-green btn teal">Update</a>
		</div>
	</div>


	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/materialize.min.js"></script>
	<script type="text/javascript" src="/js/preloader.js"></script>
	<script type="text/javascript" src="/js/moment.min.js"></script>
	<script type="text/javascript" src="/js/admin.js"></script>
</body>

</html>