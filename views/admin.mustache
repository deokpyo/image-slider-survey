<body class="container">
	<!-- Preloader -->
	<div id="preloader">
		<div id="status"></div>
	</div>

	<div class="row">
		<h1><i class="medium material-icons">settings</i> Admin Page</h1>
		<br/>
		<div class="input-field col s6">
			<select id="page-option">
				<option value="" disabled selected>Select your option</option>
				<option value="1">1. No Slider, Short Text</option>
				<option value="2">2. No Slider, Long Text</option>
